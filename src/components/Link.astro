---
import type { AstroComponentSlots } from 'astro/dist/runtime/server'

export interface Props {
  href: string
  design?: 'link' | 'button'
  size?: 'small' | 'medium' | 'large'
  pushed?: boolean
  openNewWindow?: boolean
}

const { href, text, design = 'link', size = 'medium', pushed, openNewWindow } = Astro.props
---

<a
  href={href}
  class={`${design} ${size} ${pushed ? 'active' : ''}`}
  target={openNewWindow ? '_blank' : '_self'}
  ><slot />{openNewWindow && <i class='fa-solid fa-arrow-up-right-from-square' />}</a
>

<style>
  .button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    color: var(--font-color-normal);
    text-decoration: none;

    transition: all 0.1s ease-out;

    &.small {
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      box-shadow: 0.25rem 0.25rem 0.5rem var(--shadow-dark),
        -0.25rem -0.25rem 0.5rem var(--shadow-light);

      &.active {
        box-shadow: inset 0.25rem 0.25rem 0.5rem var(--shadow-dark),
          inset -0.25rem -0.25rem 0.5rem var(--shadow-light);
      }
    }

    &.medium {
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      box-shadow: 0.5rem 0.5rem 0.75rem var(--shadow-dark),
        -0.5rem -0.5rem 0.75rem var(--shadow-light);

      &.active {
        box-shadow: inset 0.5rem 0.5rem 0.75rem var(--shadow-dark),
          inset -0.5rem -0.5rem 0.75rem var(--shadow-light);
      }
    }

    &.large {
      padding: 1rem 2rem;
      border-radius: 0.75rem;
      box-shadow: 0.75rem 0.75rem 1rem var(--shadow-dark),
        -0.75rem -0.75rem 1rem var(--shadow-light);

      &.active {
        box-shadow: inset 0.75rem 0.75rem 1rem var(--shadow-dark),
          inset -0.75rem -0.75rem 1rem var(--shadow-light);
      }
    }
  }

  .link {
    color: var(--font-color-link);
    position: relative;
    text-decoration: none;
    &:after {
      position: absolute;
      left: 0;
      content: '';
      display: block;
      width: 0;
      height: 0.1em;
      min-height: 1px;
      background: var(--font-color-link);
      transition: width 0.2s ease-out;
    }

    &:hover:after {
      width: 100%;
    }
  }

  i {
    margin-left: 0.25em;
    color: var(--font-color-link);
  }
</style>
